<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="WARN">

    <!-- Base path for log files -->
    <Properties>
        <Property name="basePath">./logs</Property> <!-- Here we show where the path to store the file "./logs means the logs folder under this project"-->
    </Properties>

    <!-- Appenders -->
    <Appenders>

        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Rolling File Appender -->
        <RollingFile
                name="File"
                fileName="${basePath}/automation.log"
                filePattern="${basePath}/automation-%d{yyyy-MM-dd}.log"> <!-- this is to save 1st file and generate new file after size limit of of 1st file is reached -->

            <PatternLayout
                pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>

            <Policies>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>

        </RollingFile>

    </Appenders>

    <!-- Loggers -->
    <Loggers>
        <Root level="off"> <!--here you can use any log level you wish All<Trace <Debug <Info< Warn <Error <Fatel< Off-->
            <!-- Uncomment if console logs are required -->
            <!-- <AppenderRef ref="Console"/> -->
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>

</Configuration>
